                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Label Content="Score: " Width="129" Foreground="#FFF704DF" Panel.ZIndex="1" Canvas.Left="10" Canvas.Top="12" Height="64" FontSize="36"/>
        <Label x:Name="ScoreLabel" Content="0" Width="187" Foreground="#FFF704DF" Canvas.Left="144" Panel.ZIndex="1" Canvas.Top="16" Height="56" FontSize="36"/>
    </Canvas>
</Window>
